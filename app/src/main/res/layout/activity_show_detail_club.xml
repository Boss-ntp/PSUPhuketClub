<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_detail_club_for_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#B2DFDB"
    tools:context="com.psuclubapp.psuclubapp.ShowDetailClubActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameClub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:background="#44576b"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/picClub"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="รายละเอียดชมรม"
                android:textStyle="bold"
                android:background="#fa9090"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/detailClub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="รหัสนักศึกษาของประธานชมรม"
                android:textStyle="bold"
                android:background="#fa9090"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/stdIDHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชื่อของประธานชมรม"
                android:textStyle="bold"
                android:background="#fa9090"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/nameHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เบอร์โทรของประธานชมรม"
                android:textStyle="bold"
                android:background="#fa9090"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/phoneHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชื่อของทีปรึกษาชมรม"
                android:textStyle="bold"
                android:background="#fa9090"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/nameAj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เบอร์โทรของที่ปรึกษาชมรม"
                android:textStyle="bold"
                android:background="#fa9090"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/phoneAj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สำหรับคณะ..."
                android:textStyle="bold"
                android:background="#fa9090"
                android:textColor="#ffffff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <CheckBox
                    android:id="@+id/id_FHT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="FHT" />

                <CheckBox
                    android:id="@+id/id_FIS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="FIS" />

                <CheckBox
                    android:id="@+id/id_FTE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="FTE" />

                <CheckBox
                    android:id="@+id/id_CoE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="CoE" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/regisClub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.Button.red"
                    android:text="ลงทะเบียน" />

                <Button
                    android:id="@+id/exitClub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.Button.red"
                    android:text="ออกจากชมรม" />

                <Button
                    android:id="@+id/editClub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.Button.darkbule"
                    android:text="แก้ไข" />

                <Button
                    android:id="@+id/deleteClub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.Button.red"
                    android:text="ลบ" />

                <Button
                    android:id="@+id/followClub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.Button.darkbule"
                    android:text="ติดตาม" />

                <Button
                    android:id="@+id/unFollowClub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.Button.darkbule"
                    android:text="เลิกติดตาม" />

                <Button
                    android:id="@+id/callBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:text="ย้อนกลับ" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
